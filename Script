-- A goodbye message for breaking point and breaking plus Made by Naiko Exploits --

local Messages = {"Hello, This a message from naiko exploits.",
"Breaking point has broken by a roblox update",
"This means that breaking plus will not work till its fixed.",
"So this is what the breaking plus script is going to show till its fixed.",
"Lets hope that roblox reverts this update that caused this issue.",
"For now this is a goodbye..."}
currentMessage = 1

local LocalPlayer = game.Players.LocalPlayer
local UI = LocalPlayer.PlayerGui.ScreenGui

function Notify(Message,Button)
	pcall(function()
		if Message == nil then
			return
		else
			if Button == nil then
				Button = "Ok"
			end
			local CustomNotify = UI.msgbox:Clone()
			CustomNotify.Parent = UI
			CustomNotify.Name = "CustomMsg"
			CustomNotify.ok.Text = Button
			CustomNotify.Visible = true
			CustomNotify.ImageLabel.TextLabel.Text = Message
			CustomNotify.ok.MouseButton1Click:Connect(function()
				currentMessage += 1
                if Messages[currentMessage] ~= nil then
                    Notify(Messages[currentMessage],"Ok")
                end
                CustomNotify:Destroy()
			end)
		end
	end)
end

Notify(Messages[currentMessage],"Ok")
